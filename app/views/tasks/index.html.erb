<h2><%= current_user.name %></h2>
<h3>タスク一覧</h3>
<div class="row">
  <%= link_to '投稿する', new_task_path %>
  <% @tasks.each do |task| %>
    <ul class="list-unstyled mt-2">
    <li class="d-flex">
      <div>
        <%= link_to current_user.name, task_path(task), class: "text-decoration-none" %>
        <span class="text-muted">posted at <%= task.created_at %></span>
      </div>
      </li>
      </ul>
  <% end %>
</div>
