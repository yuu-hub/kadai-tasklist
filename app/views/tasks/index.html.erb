<h2><%= current_user.name %></h2>
  <h3>タスク一覧</h3>
 <div class="row">
    <aside class="col-sm-4">
      <%= form_with(model: @task) do |f| %>
        <div class="mb-3">
            <%= f.label :content, '新規タスク' %>
            <%= f.text_field :content %>
        </div>
        <div class="mb-3">
            <%= f.label :status, 'ステータス' %>
            <%= f.text_field :status %>
        </div>  

        <%= f.submit '投稿', class: 'btn btn-primary w-100' %>
      <% end %>
    </aside>
  <div class="col-sm-8">
    <div>
      <%= render 'tasks/tasks', tasks: @tasks %>
    </div>
  </div>  
</div>    


