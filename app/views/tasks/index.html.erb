<%= link_to 'Logout', logout_path, method: :delete, class: 'nav-link' %>
  <h3>タスク一覧</h3>
<% if logged_in? %>
<h2><%= current_user.name %></h2>
 <div class="row">
    <aside class="col-sm-4">
      <%= form_with(model: @task) do |f| %>
        <div class="mb-3">
            <%= f.label :status, 'ステータス' %>
            <%= f.text_field :status %>
        </div>  
        <div class="mb-3">
            <%= f.label :content, '新規タスク' %>
            <%= f.text_field :content %>
        </div>
        <%= f.submit '投稿', class: 'btn btn-primary w-100' %>
      <% end %>
    </aside>
  <div class="col-sm-8">
  <ul>
    <% @tasks.each do |task| %>
      <li><%= link_to task.id, task %> : <%= task.status %> &gt; <%= task.content %></li>
    <% end %>
  </ul>
    
<% else %>
  <%= link_to '新規登録', signup_path, class: 'btn btn-lg btn-primary' %>
  </div>
<% end %>


